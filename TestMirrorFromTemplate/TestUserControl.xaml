<UserControl x:Class="TestMirrorFromTemplate.TestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TestMirrorFromTemplate"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="TUC" d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Ellipse Width="20" Height="20" Fill="DarkOrange" />
        <Button Content="{Binding ElementName=TUC, Path=Testo}" />
    </StackPanel>
</UserControl>
